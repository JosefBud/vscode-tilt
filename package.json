{
  "name": "vscode-tilt",
  "displayName": "vscode-tilt",
  "description": "A VSCode extension to view and control Tilt resources",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "preview": true,
  "badges": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tilt-view",
          "title": "Tilt View",
          "icon": "static/images/logo-lettermark.svg"
        }
      ]
    },
    "views": {
      "tilt-view": [
        {
          "id": "tiltViewServices",
          "name": "Services",
          "icon": "static/images/logo-lettermark.svg",
          "contextualTitle": "Tilt Services"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-tilt.restartResource",
        "icon": "$(refresh)",
        "title": "Restart resource"
      },
      {
        "command": "vscode-tilt.disableResource",
        "icon": "$(close)",
        "title": "Disable resource"
      },
      {
        "command": "vscode-tilt.enableResource",
        "icon": "$(play)",
        "title": "Enable resource"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vscode-tilt.disableResource",
          "when": "view == tiltViewServices && viewItem == resourceEnabled",
          "group": "inline"
        },
        {
          "command": "vscode-tilt.enableResource",
          "when": "view == tiltViewServices && viewItem == resourceDisabled",
          "group": "inline"
        },
        {
          "command": "vscode-tilt.restartResource",
          "when": "view == tiltViewServices && viewItem == resourceEnabled",
          "group": "inline"
        }
      ]
    },
    "configuration": []
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "node --require ts-node/register --test **/*.spec.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "zod": "^4.0.17"
  }
}
